generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_DB_URL")
}

model Users {
  id                Int       @id @unique @default(autoincrement())
  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt
  firstName         String
  lastName          String
  email             String    @unique
  password          String
  phoneNumber       String
  privateCustomer   Boolean?  @default(false)
  isCompany         Boolean?  @default(false)
  workshopName      String?
  salesTaxNumber    String?
  country           Json?
  invoiceEmail      String?
  requisitionNumber String?
  newsLetter        Boolean?  @default(false)
}

model used_carparts {
  id                 Int     @id @unique @default(autoincrement())
  CustomLabel        Int
  Title              String
  Hersteller         String
  Modell             String
  PicURL             String
  Price              Decimal
  Quantity           Int
  generic_attributes String
  OEMR               String
  OER                String
  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt
}
